<%- include('./parts/header.ejs') %> <%# Navbar %> <%-
include('./parts/navbar.ejs') %>

<div class="container">
  <% if(!product){ %>
  <div class="alert alert-danger">There is no product matches this id</div>
  <% } else{ %>
  <div class="row">
    <div class="col col-12 col-md-6">
      <div class="card" style="width: 25rem">
        <img src="/<%= product.image%>" class="card-img-top" />
        <div class="card-body">
          <form action="/cart" class="my-3" method="post">
            <input
              type="number"
              class="form-control"
              placeholder="Amount"
              name="amount"
            />
            <input
              type="submit"
              class="btn btn-success mt-3"
              value="Add To Cart"
            />
          </form>
        </div>
      </div>
    </div>
    <div class="col col-12 col-md-6">
      <h3><%=product.name%></h3>
      <p class="fs-5">Price: $<%= product.price %></p>
      <p class="fs-5"><%= product.discription %></p>
    </div>
  </div>
  <% } %>
</div>

<%- include('./parts/footer.ejs') %>
