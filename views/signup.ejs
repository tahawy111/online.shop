<%- include('./parts/header.ejs') %> <%# Navbar %> <%-
include('./parts/navbar.ejs') %>

<div class="container text-center">
  <h3>Create Account</h3>
  <form action="/signup" method="POST">
    <input
      type="text"
      class="form-control my-2"
      name="username"
      placeholder="Username"
    />
    <% let usernameError = validationErrors.find(err => err.param ===
    'username') %> <% if(usernameError){ %>
    <p class="alert alert-danger"><%= usernameError.msg %></p>
    <% } %>
    <input
      type="email"
      class="form-control my-2"
      name="email"
      placeholder="E-Mail"
    />
    <% let emailError = validationErrors.find(err => err.param === 'email') %>
    <% if(emailError){ %>
    <p class="alert alert-danger"><%= emailError.msg %></p>
    <% } %>
    <input
      type="password"
      class="form-control my-2"
      name="password"
      placeholder="Password"
    />
    <% let passwordError = validationErrors.find(err => err.param ===
    'password') %> <% if(passwordError){ %>
    <p class="alert alert-danger"><%= passwordError.msg %></p>
    <% } %>
    <input
      type="password"
      class="form-control my-2"
      name="confirmPassword"
      placeholder="Confirm Password"
    />
    <input
      type="submit"
      class="btn btn-primary"
      value="Create Account"
      class="btn btn-primary my-2"
    />
  </form>
  <% if(authError){ %>
  <br />
  <p class="alert alert-danger"><%= authError %></p>
  <% } %>

  <p class="mt-3">
    Already Have Account ?
    <a class="text-primary" href="/login">Login</a>
  </p>
</div>

<%- include('./parts/footer.ejs') %>
